<div class="bubble" style="padding-bottom: 50px;">
	<h1 id="notice"><%= notice %></h1>

  <% if @tanuki.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tanuki.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @tanuki.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>

      <br />

			<% if @tanuki %>
			  hue: <%= @tanuki.get_hue %>
			  <br />
			  sepia: <%= @tanuki.get_sepia %>
			  <br />
			  brightness: <%= @tanuki.get_brightness %>
				<br />
				name: <%= @tanuki.get_name %>
				<br />
				meaning: <%= @tanuki.get_name_meaning %>
			  <br />
			  male: <%= @tanuki.is_male %>
				<br />
				nature: <%=@tanuki.get_nature %>
			<% end %>
		</div>
  <% end %>
	
  <br />

	<% if @tanuki %>
	  <%= image_tag "icons/Tanuki.gif", :class => "gen-tanuki", :style => "-webkit-filter: hue-rotate(" +@tanuki.get_hue + "deg) sepia(" +@tanuki.get_sepia + "%) brightness(" +@tanuki.get_brightness + "%); float: left;" %>

	  <div style="padding-left: 60px;">
	    <%= @tanuki.get_name %>
	    <% if@tanuki.is_male %>
	      <%= image_tag "boy.png"%>
	    <% else %>
	      <%= image_tag "girl.png"%>
	    <% end %>
	    <div style="font-size: 8px; display: inline;">(<%=@tanuki.get_name_meaning %>)</div><br />
	    <div style="font-size: 10px; margin-bottom: 10px;"><%=@tanuki.get_nature %></div>
	  </div>
	<% end %>

	<%= link_to 'Back', profile_index_path, :class => "button", :style => "float:right" %>
</div>
