<div class="bubble" style="padding-bottom: 50px;">
	<h1 id="notice"><%= notice %></h1>

	<% if @tanuki %>
	  <%= image_tag "icons/Tanuki.gif", :class => "gen-tanuki", :style => "-webkit-filter: hue-rotate(" +@tanuki.hue.to_s + "deg) sepia(" +@tanuki.sepia.to_s + "%) brightness(" +@tanuki.brightness.to_s + "%); float: left;" %>

	  <div style="padding-left: 60px;">
	    <%= @tanuki.get_name %>
	    <% if@tanuki.is_male %>
	      <%= image_tag "boy.png"%>
	    <% else %>
	      <%= image_tag "girl.png"%>
	    <% end %>
	    <div style="font-size: 8px; display: inline;">(<%=@tanuki.get_name_meaning %>)</div><br />
	    <div style="font-size: 10px; margin-bottom: 10px;"><%=@tanuki.nature %></div>
	  </div>
	<% end %>

	<%= link_to 'Back', profile_index_path, :class => "button", :style => "float:right" %>
</div>
