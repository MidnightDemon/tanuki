<!DOCTYPE html>
<html>
<head>
	<title>Tanuki</title>
	<%= stylesheet_link_tag "application" %>
	<%= javascript_include_tag :defaults %>
	<%= javascript_include_tag "application" %>
	<%= csrf_meta_tags %>
</head>
<body style="background: #EEEEEE;">
		
			<% if signed_in? %>
				<div id="user_nav">
					Signed in as <%= current_user.email %>.  Not you? 
					<%= link_to "Logout", destroy_user_session_path, :class => "button" %>
				</div>

				<div id="container">
					<%= yield %>
				</div>
				
			<% elsif request.path == new_user_session_path || request.path == new_user_registration_path%>

				<div id="container">
					<%= yield %>
				</div>

			<% else %>
				<div id="user_nav">
					<%= link_to "Sign in", new_user_session_path %> or <%= link_to "Sign up", new_user_registration_path %>
				</div>
			<% end %>
		</div>
	</div>
	
</body>
</html>
